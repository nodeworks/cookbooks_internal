    # ---------------------------------------------------------------------
    # N.com Portal server
    # ---------------------------------------------------------------------

    server {
        listen 80;
        server_name content.samsung.com;
        access_log /ncom/ncom_bin/nginx/logs/ncomportal.access.log zero_log;
        #access_log /ncom/ncom_bin/nginx/logs/ncomportal.access_time.log processing_time;
	error_log /ncom/ncom_bin/nginx/logs/ncomportal.error.log;

        root /home/hudson/wwwdoc/content.samsung.com/;

        location ~* \.(jpg|jpeg|gif|css|png|js|ico|html|swf|pdf|flv|csv|mp4|apk|xml|snb)$ {
            access_log off;
        }

        location ~* \.(woff|ttf|eot|otf)$ {
            add_header Access-Control-Allow-Origin *;
        }

        # Except for IR Country
        location /ir/ {
           rewrite ^ http://$server_name/common/selectyourcountry.do;
        }

	location /mobile/ir/ {
	   rewrite ^ http://$server_name/common/404.do;
	}

        # Redirect to /global for apps's /go url
        location /go {
            rewrite ^ http://$server_name/global/main.do;
        }

        # ChatOn AJAX Cache
        # Except for /svc/ajax/gateway/chaton/getChatonFriednChatJson
        location ~ /svc/ajax/gateway/chaton/getChatOn {

	    #access_log /ncom/ncom_bin/nginx/logs/chaton.access.log chaton_access_log;

            proxy_pass http://ncomportal_server;
            proxy_next_upstream timeout error;
            proxy_connect_timeout 10;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

            proxy_cache_key       "$host$request_uri";
            proxy_cache           CHATON;   # Cache Zone name
            proxy_cache_valid     200 5m;   # Only for HTTP_200, 1 Hour cache
            proxy_cache_use_stale updating; # Repeatable read

            break;
        }

	location / {
            proxy_pass http://ncomportal_server;
            proxy_next_upstream timeout error;

            proxy_connect_timeout 60;
            proxy_read_timeout    600;

            proxy_buffers           8 16k;
            proxy_buffer_size       8k;
            proxy_busy_buffers_size 16k;

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }

